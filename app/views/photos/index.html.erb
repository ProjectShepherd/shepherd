<h1>Listing photos</h1>

<table>
  <thead>
    <tr>
      <th>Missing person</th>
      <th>Photo type</th>
      <th>Photo (original)</th>
      <th>Photo (medium)</th>
      <th>Photo (thumb)</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @photos.each do |photo| %>
      <tr>
        <td><%= photo.missing_person %></td>
        <td><%= photo.photo_type %></td>
        <td><%= image_tag photo.photo_attachment.url %></td>
        <td><%= image_tag photo.photo_attachment.url(:medium) %></td>
        <td><%= image_tag photo.photo_attachment.url(:thumb) %></td>
        <td><%= link_to 'Show', photo %></td>
        <td><%= link_to 'Edit', edit_photo_path(photo) %></td>
        <td><%= link_to 'Destroy', photo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

